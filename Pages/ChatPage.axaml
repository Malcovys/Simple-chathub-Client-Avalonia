<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Client.Pages.ChatPage">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Panneau gauche: Utilisateurs connectés -->
        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Utilisateurs connectés" FontWeight="Bold" Margin="10" />
                <ListBox x:Name="UsersList" Margin="10,0,10,10" />
            </StackPanel>
        </Border>

        <!-- Panneau droit: Messages -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Liste des messages -->
            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
                <ListBox x:Name="MessagesList" />
            </Border>

            <!-- Zone de saisie -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox x:Name="MessageInput" Grid.Column="0" Watermark="Entrez votre message..." />
                <Button Grid.Column="1" Content="Envoyer" Click="SendButton_Click" Margin="10,0,0,0" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>